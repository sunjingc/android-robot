<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--<com.androb.androidrobot.dragMode.DragModeQuestionView-->
        <!--android:id="@+id/dragMode_question_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="20dp" />-->

    <ScrollView
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_forward"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_blue_500"
                android:text="前进"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_backward"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_blue_500"
                android:text="后退"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_blue_500"
                android:text="左转"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_right"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_blue_500"
                android:text="右转"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_if"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_orange_500"
                android:text="if"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_while"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_orange_500"
                android:text="while"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/btn_for"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_orange_500"
                android:text="for"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drag_question_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:lineSpacingMultiplier="1.5"
                android:textSize="16sp"
                android:text="Question here"/>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/starting_point"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@color/material_green_500"
                android:text="Start"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>